<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gastoframe"
    android:background="@drawable/grad"

    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:padding="5dp"
            android:background="@drawable/round"
            android:id="@+id/itemc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Item comprado"
            android:textColorHint="@color/md_grey_100"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:drawableStart="@drawable/ic_shopping_basket_black_24dp"
            android:drawablePadding="10dp"

            />
        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/itemv"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_attach_money_black_24dp"
            android:layout_marginTop="25dp"
            app:mask="R$ #####.##"
            android:padding="5dp"
            android:textSize="25dp"
            android:background="@drawable/round"
            android:layout_below="@+id/itemc"
            android:minWidth="185dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/md_grey_100"
            android:hint="Valor"
            android:layout_centerInParent="true"

            />

    <Button
        android:id="@+id/gastobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="concluir"
        android:layout_below="@id/itemv"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:textColor="@color/md_green_400"

        />


    </RelativeLayout>

</FrameLayout>